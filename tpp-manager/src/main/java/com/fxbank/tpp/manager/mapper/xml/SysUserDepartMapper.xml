<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fxbank.cip.manager.mapper.SysUserDepartMapper" >

    <resultMap id="BaseResultMap" type="com.fxbank.cip.manager.entity.SysUserDepart" >
        <result column="user_id" property="userId" jdbcType="INTEGER" />
        <result column="depart_id" property="departId" jdbcType="INTEGER" />
    </resultMap>
    <select id="selectAll"  resultMap="BaseResultMap" >
            select user_id, depart_id from sys_user_depart
      </select>
    <resultMap id="UserResultMap" type="com.fxbank.cip.manager.entity.SysUser" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="salt" property="salt" jdbcType="VARCHAR" />
        <result column="state" property="state" jdbcType="VARCHAR" />
    </resultMap>
    <select id="selectAvailableUser" resultMap="UserResultMap" >
    select id, username, name, password, salt, state
    from sys_user where state!='2'
  </select>

</mapper>