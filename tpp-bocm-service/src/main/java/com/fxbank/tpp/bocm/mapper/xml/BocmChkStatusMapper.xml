<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fxbank.tpp.bocm.mapper.BocmChkStatusMapper" >
  <resultMap id="BaseResultMap" type="com.fxbank.tpp.bocm.entity.BocmChkStatus" >
    <id column="CHK_DATE" property="chkDate" jdbcType="DECIMAL" />
    <result column="HOST_STATUS" property="hostStatus" jdbcType="DECIMAL" />
	<result column="BOCM_STATUS" property="bocmStatus" jdbcType="DECIMAL" />
	<result column="PLAT_STATUS" property="platStatus" jdbcType="DECIMAL" />
  </resultMap>
  <select id="selectAll" resultMap="BaseResultMap" >
    select CHK_DATE, HOST_STATUS, BOCM_STATUS, PLAT_STATUS
    from BOCM_CHK_STATUS
  </select>
  
  <select id="selectByDate" resultMap="BaseResultMap">
    select chk_date, host_status, bocm_status, plat_status
    from bocm_chk_status
    where chk_date = #{date}
  </select>

</mapper>